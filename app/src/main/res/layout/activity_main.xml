<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"

    android:background="@android:color/holo_blue_light"

tools:context="com.example.student.appkapogodowa.MainActivity">


    <TextView
        android:id="@+id/txtv_NazwaMiasta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zabrze"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="25dp"/>
    <ImageView
        android:id="@+id/obrazek"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_wb_sunny_black_24dp" />

    <TextView
        android:id="@+id/txtv_30st"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30 stopni celcjusza"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/txtv_filtr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pamiętaj o filtrze"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/txtv_Podajmiejsce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Podaj miejsce"
        android:layout_marginVertical="5dp"
        android:gravity="center"
        android:textSize="15dp"/>
    <EditText
        android:id="@+id/Et_WpiszMiasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"

        />
    <Button
        android:id="@+id/btn_zmienMiejsce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zmień miejsce"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColor="@android:color/holo_blue_light"

        />
    <Button
        android:id="@+id/btn_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pokaż listę dostępnych miejsc"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColor="@android:color/holo_blue_light"

        />
</LinearLayout>
